{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "declarationDir": "./bundle/tsc",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "outDir": "./bundle/tsc",
    "moduleResolution": "Node",
    "module": "ES2015",
    "declaration": true,
    "inlineSourceMap": true,
    "strict": true,
    "target": "ES2019",
    "jsx": "react"
  }
}
